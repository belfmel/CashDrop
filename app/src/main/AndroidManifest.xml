<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cashdrop">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- <uses-permission android:name="android.permission.BLUETOOTH"/> -->
    <!-- <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/> -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cashdrop"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cashdrop_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".creditCardUpdate"
            android:label="Update Credit Card"></activity>
        <activity
            android:name=".FindUsers"
            android:label="Cash Drop" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".PayToUsers"
            android:label="Pay To User " />
    </application>

</manifest>